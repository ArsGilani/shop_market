<%= form_for([:admin, @category, @product]) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this @product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  
  <div id='pictures' style="border: solid 2px green; padding: 10px; margin: 20px;">
    <p><strong>Добавить рисунки:</strong></p>
    <%= f.fields_for :pictures do |picture| %>
      <%= render 'picture_fields', :f => picture %>
    <% end %>

    <div class='links'>
    <hr>
      <%= link_to_add_association 'Еще изображение', f, :pictures, class: 'btn btn-primary' %>
    </div>
  </div>
  <hr>

  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>